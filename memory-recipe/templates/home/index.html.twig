{% extends 'base.html.twig' %}

{% block content %}

<main class="home">
    <div class="divider"></div>
    <section>
        <div class="recipe-wheel"> 
            <div>
                <h3 class="fst-italic">Recette roulette</h3>
            </div>  
            <div class="recipe-wheel-img">
            <a class="recipe-wheel-link" href="{{path('recipe_show', {'id': randomRecipe.id})}}">
                {% if randomRecipe.picture %}
                <img src="{{ asset('uploads/' ~ randomRecipe.picture) }}" width="300" alt="{{ randomRecipe.name }}">
                {% else %}   
                    {% if randomRecipe.category.id == 9 %}
                    <img src="{{ asset('assets/images/aperitif.jpg')}}" alt="">
                    {% elseif randomRecipe.category.id == 10 %}
                    <img src="{{ asset('assets/images/entree.jpg')}}" alt="">
                    {% elseif randomRecipe.category.id == 11 %}
                    <img src="{{ asset('assets/images/dessert.jpg')}}" alt="">
                    {% elseif randomRecipe.category.id == 12 %}
                    <img src="{{ asset('assets/images/plat.jpg')}}" alt="">
                    {% endif %}
                {% endif %}
                <div class="recipe-wheel-informations">
                    <h3>{{randomRecipe.name}}</h3>
                    <p>{{randomRecipe.informations}}</p>
                </div>
                    </a>
            </div>
        </div>
    </section>
    <div class="divider"></div>
    <section>
        <div class="recipe-newest">
            <div>
                <h3 class="fst-italic">Derni√®res recettes</h3>
            </div>
            <div class="lastRecipe-list">
                {% for recipe in lastRecipes %}
                <div class="lastRecipe">
                <a class="lastRecipe-link" href="{{path('recipe_show', {'id': recipe.id})}}">
                {% if recipe.picture %}
                <img src="{{ asset('uploads/' ~ recipe.picture) }}" width="300" alt="{{ recipe.name }}">
                {% else %}   
                    {% if recipe.category.id == 9 %}
                    <img src="{{ asset('assets/images/aperitif.jpg')}}" alt="">
                    {% elseif recipe.category.id == 10 %}
                    <img src="{{ asset('assets/images/entree.jpg')}}" alt="">
                    {% elseif recipe.category.id == 11 %}
                    <img src="{{ asset('assets/images/dessert.jpg')}}" alt="">
                    {% elseif recipe.category.id == 12 %}
                    <img src="{{ asset('assets/images/plat.jpg')}}" alt="">
                    {% endif %}
                {% endif %}
                    <div class="lastRecipe-informations">
                        <h3>{{recipe.name}}</h3>
                        <p> par {{recipe.user.firstname}}</p>
                    </div>
                        </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {# <section>
        <div class="recipe-best">
